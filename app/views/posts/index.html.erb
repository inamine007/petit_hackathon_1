<h3>投稿一覧</h3>

<div class="post-container">
<%= paginate @posts %>
    <% @posts.each do |post| %>
    <div>
        <%= post.user.name %>
    </div>
    <div class="post-title">
        <%= link_to post.title, post %>
    </div>
    <div class="post-image">
        <%= link_to (image_tag post.image.url, size: '300x300'), post %>
    </div>
    <div>投稿日: <<%= post.created_at.to_date %>></div>
    <% end %>
    <%= paginate @posts %>
</div>