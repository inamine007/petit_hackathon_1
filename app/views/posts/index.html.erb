<h3 class="mt-3">投稿一覧</h3>

<div class="post-containe">
    <%= paginate @posts %>
    <% @posts.each do |post| %>
        <div class="border p-3 mx-auto mt-3" style="width: 30%;">
            <div>
                <%= post.user.name %>
            </div>
            <div class="post-title">
                <%= link_to post.title, post %>
            </div>
            <div class="post-image">
                <%= link_to (image_tag post.image.url), post %>
            </div>
            <div>投稿日: <<%= post.created_at.to_date %>></div>
            
            <% if logged_in? %>  <%# => ログインしているuserじゃないと、favoriteが表示できないエラーになる!! %>
                <div id="favorite_btn_<%= post.id %>">
                    <%= render 'favorites/favorite', post: post %>
                </div>
            <% end %>
        </div>
    <% end %>
</div>

