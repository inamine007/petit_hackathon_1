<%# <h1>Users#new</h1>
<p>Find me in app/views/users/new.html.erb</p> %>
<div>
    <%= form_with(model: @user, local: true) do |f| %>
        <%= render 'error_messages' %>
        <div>
            <%= f.label :名前 %>
            <%= f.text_field :name %>
        </div>
        <div>
            <%= f.label :メールアドレス %>
            <%= f.email_field :email %>
        </div>
        <div>
            <%= f.label :パスワード %>
            <%= f.password_field :password %>
        </div>
        <div>
            <%= f.label :パスワード（確認用）%>
            <%= f.password_field :password_confirmation %>
        </div>
            <%= f.submit "登録"%>
        </div>
    <% end %>

</div>
